{
  "manifest_version": 3,
  "name": "TypeRevive",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  },
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "permissions": ["activeTab", "scripting", "tabs", "storage", "background"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://*/*"],
  "description": "Revive every text on every website & never lose work again!"
}
